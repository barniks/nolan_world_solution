<h2>Comment</h2>

<p>
  <%= @comment.content %>
</p>

<p>
  <b>Name</b><br>
  <%= @comment.name %>
</p>

<p>
  <b>Email</b><br>
  <%= @comment.email %>
</p>

<p>
  <b>Active</b><br>
  <%= @comment.active ? "Yes" : "No" %>
</p>

<div class="form-actions">
  <%= link_to 'Back', comments_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_comment_path(@comment), :class => 'btn' %>
  <%= link_to 'Delete', comment_path(@comment), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
