<h2>Comments</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Content</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.content, comment_path(comment) %></td>
        <td><%= comment.name %></td>
        <td>
          <%= link_to 'Edit', edit_comment_path(comment), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', comment_path(comment), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_comment_path, :class => 'btn btn-primary' %>
